@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="RegisterForm">
    <div class="Index-Title">
        <h1>@ViewData["Title"]</h1>
    </div>
      <div class="row">
    <div class="col-md-4 registerCreateForm">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.ImageFile" class="col-form-label col-form-label-lg" for="inputLarge">Add Image?</label><br>
                <input id="image-upload-button" asp-for="Input.ImageFile" type="button" class="form-control" value="Add Image">
            </div>

            <div class="form-group hidden" id="image-input">
                <label asp-for="Input.ImageFile" class="control-label">File input</label>
                <input asp-for="Input.ImageFile" type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
                <small id="fileHelp" class="form-text text-muted">Please select an image.</small>
            </div>


            <div class="form-group">
                <label asp-for="Input.FirstName" class="col-form-label col-form-label-lg" for="inputLarge"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName" class="col-form-label col-form-label-lg" for="inputLarge"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email" class="col-form-label col-form-label-lg" for="inputLarge"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" asp-for="Input.IsVeterinarian" id="IsVeterinarian">
                <label class="custom-control-label" for="IsVeterinarian">Are you a Veterinarian?</label>


                <div class="reveal-if-active form-group" id="DoctorInfo">
                    <label asp-for="Input.VeterinarianName"></label>
                    <input asp-for="Input.VeterinarianName" class="form-control" />
                    <span asp-validation-for="Input.VeterinarianName" class="text-danger"></span>
                    <div class="form-group">
                        <label asp-for="Input.VeterinarianPhone"></label>
                        <input asp-for="Input.VeterinarianPhone" class="form-control" />
                        <span asp-validation-for="Input.VeterinarianPhone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group" style="padding-top: 20px;">
                <label asp-for="Input.Password" class="col-form-label col-form-label-lg" for="inputLarge"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="col-form-label col-form-label-lg" for="inputLarge"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div> 
</div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
