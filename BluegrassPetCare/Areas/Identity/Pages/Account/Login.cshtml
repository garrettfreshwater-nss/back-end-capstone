@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


    <div class="LoginForm">
        <div class="Index-Title">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="row">
            <div class="col-md-4 loginCreateForm">
                <section>
                    <form id="account" method="post">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" class="col-form-label col-form-label-lg" for="inputLarge"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="col-form-label col-form-label-lg" for="inputLarge"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <label class="form-check-label col-form-label col-form-label-lg" asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Log in</button>
                            </div>
                    </form>
                </section>
            </div>
        </div>
    </div>


        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
