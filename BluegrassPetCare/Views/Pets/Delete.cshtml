@model BluegrassPetCare.Models.Pet

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pet</h4>
    <hr />
    <div class="col-md-6">
        <div class="col-md-10">
            <img style="max-height: 500px; max-width: 500px" src="~/images/@Model.ImagePath" alt="descriptive image" />
        </div>
    </div>
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Species.SpeciesType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Breed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Breed.BreedName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sex.SexType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsSpayedOrNeutered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsSpayedOrNeutered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentMedications)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentMedications)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OngoingProblems)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OngoingProblems)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PetId" />
       
        <input type="image" class="deleteButton" value="Delete" src="~/assets/trash.svg" />
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Back to list</a></li>
            <li class="breadcrumb-item active">Pets</li>
        </ol>
    </form>


</div>
