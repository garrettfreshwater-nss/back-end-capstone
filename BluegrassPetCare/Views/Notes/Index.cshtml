@model IEnumerable<BluegrassPetCare.Models.Note>

@{
    ViewData["Title"] = "Index";
}

<h1>Notes</h1>

<hr />
<p>
    <a asp-action="Create" class="btn btn-outline-info btn-lg">Add a Note</a>
</p>

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pet.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-dark">
            <td>
                @Html.DisplayFor(modelItem => item.Pet.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @if (item.UploadPath == null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.UploadPath)
                </td>
            }
            else
            {
                <td>

                    <a href="@Url.Action("Details", "Note",  new { Id = item.NoteId })">
                        <embed src="~/pdfs/@item.UploadPath" , style="width: 10em; height: auto;">

                    </a>
                </td>
            }
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.NoteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NoteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NoteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

   
     
</table>